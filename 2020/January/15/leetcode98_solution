/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
class Solution {
    public long prev;
    public boolean isValidBST(TreeNode root) {
        if(root==null)
            return true;
        prev=Long.MIN_VALUE;
        return isValid(root);
    }
    
    private boolean isValid(TreeNode root){
        if(root==null)
            return true;
        
        
        if(!isValid(root.left)){
            return false;
        }
        
        
        if(root.val<=prev){
            return false;
        }
        
        prev=root.val;
        
        if(!isValid(root.right)){
            return false;
        }
        
        
        return true;
    }
}
